{
  "compilerOptions": {
    "rootDir": ".",
    "module": "commonjs",
    "types": ["node"],
    "target": "es2021",
    "lib": ["es2021"],
    "noEmitHelpers": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"]
}
